{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": "./",
    "paths": {
      "@components/*": ["components/*"],
      "@styles/*": ["styles/*"],
      "@models/*": ["models/*"],
      "@utils/*": ["utils/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "pages/auth/signin.js",
    "pages/api/graphql.js",
    "pages/preferences.jsx",
    "pages/_app.jsx",
    "pages/closet.jsx",
    "pages/index.jsx",
    "pages/newsletter/index.jsx",
    "components/Article.jsx",
    "components/Header.jsx",
    "pages/admin/create_item/[...create_item].jsx",
    "pages/admin/articles/create_article.jsx",
    "pages/newsletter/[...id].jsx"
  ],
  "exclude": ["node_modules"]
}
